<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say something
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed" wfd-id="81">
          <% @messages.sort_by(&:created_at).each do |m| %>
            <!-- iterating through the messages sorted_by it's created_at time-->
            <div class="event" wfd-id="91">
              <div class="content" wfd-id="92">
                <div class="summary" wfd-id="93">
                  <em><%="#{m.user.username}:"%> </em> <%="#{m.body}"%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form" wfd-id="196">
          <div class="field" wfd-id="198">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Message" wfd-id="180">
              <i class="bordered inverted orange edit icon"></i>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu" wfd-id="162">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
