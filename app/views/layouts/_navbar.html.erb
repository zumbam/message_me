<%= link_to 'Chatroom', root_path, class: "item" %>
<a class="item">
  Messages
</a>
<div class="right menu">
  <% if logged_in? %>
    <div class="ui dropdown item">
      Profile <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to 'logout', logout_path, method: :delete, class: "item" %>
        <a class="item">Edit Profile</a>
      </div>
    </div>
  <% else %>
    <div class="item">
        <%= link_to 'log in', login_path, class: "ui primary button" %>
    </div>
    <div class="item">
        <a class="ui secondary button">Sign Up</a>
    </div>
  <% end %>
</div>
