
<h4 class="ui center aligned medium icon header">
  Welcome to MessageMe - a complete Chat App
   <div class="content mt-15">
     <i class="circular orange power off icon "></i>
     <div class="sub header"> Log in to continue </div>
   </div>

</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, url: login_path, method: :post, https:[class: "ui form", role: 'form']) do |f| %>
          <div class="field">
            <%= f.label(:username) %>
            <div class="ui left icon input">
              <%= f.text_field(:username) %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label(:password) %>
            <div class="ui left icon input">
              <%= f.password_field(:password) %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit("Login", class:"ui orange fluid submit button") %>
        </div>
      <% end %>
      <div class="middle aligned column">
        <div class="ui big orange button">
          <i class="signup icon"></i>
          Sign Up
        </div>
      </div>

  </div>
  <div class="ui vertical divider">
    Or
  </div>
  </div>
</div>
